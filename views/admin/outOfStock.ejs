<%- include('../partials/header') -%>

<div class="col-9">
    <div class="container p-3 w-100">
        <h1 class="mb-4">In Stock Products</h1>
        <%- include('../partials/message') -%>
        <div class="container">
            <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ASIN</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((item)=> { %>
                      <% if(!item.oldStock.includes("In Stock.")){ %>
                          <tr>
                            <td><%= item.asin %></td>
                            <td><%= item.title %></td>
                            <td><%= item.newPrice %></td>
                            <td><%= item.newStock %></td>
                            <td>
                                <a target="black" class="btn" href="<%= item.url %>">üëÅ‚Äçüó®</a>
                                <form style="display: inline;" action="/delete/product/<%= item.id %>?_method=DELETE" method="POST">
                                    
                                    <button onclick="return confirm('Are you sure delete this product?')" style="cursor: pointer;" type="submit" class="btn ">‚ùå</button>
                                </form>
                            </td>
                        </tr>
                      <% } %>
                        
                    <% }); %>    
                </tbody>
            </table>
        </div>

    </div>
</div>
<%- include('../partials/footer') -%>
</div>

<script>

$(document).ready(function() {
    $('#example').DataTable();
} );

</script>